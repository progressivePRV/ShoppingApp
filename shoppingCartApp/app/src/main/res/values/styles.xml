<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/custom_toolbar_text_color</item>
<!--        <item name="title">@color/colorWhite</item>-->
    </style>

    <style name="custom_toolbar_text_color" parent="Widget.MaterialComponents.Toolbar.Primary">
      <!--  <item name="titleTextColor">@color/BackgroundColor</item>  Widget.MaterialComponents.ActionBar.Solid-->
        <item name="colorOnPrimary">@color/BackgroundColor</item>
    </style>

    <style name="textInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>
    <style name="textSizeAndColor" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="primarytextcolor">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>